@model UserViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    @using (Html.BeginForm("GetUserEntry", "Entry", FormMethod.Post))
    {
        <table cellpadding="0" cellspacing="0">
            <tr>
                <th colspan="2" align="center">Insert Your Information</th>
            </tr>
            <tr>
                <td>User: </td>
                <td>
                    @Html.TextBoxFor(x => x.UserName)
                </td>
            </tr>
            <tr>
                <td>Enter Password: </td>
                <td>
                    @Html.TextBoxFor(x => x.Password)
                </td>
            </tr>
            <tr>
                <td>Height: </td>
                <td>
                    @Html.TextBoxFor(x => x.Height)
                </td>
            </tr>
            <tr>
                <td>Weight: </td>
                <td>
                    @Html.TextBoxFor(x => x.Weight)
                </td>
            </tr>
            <tr>
                <td>GoalWeight: </td>
                <td>
                    @Html.TextBoxFor(x => x.GoalWeight)
                </td>
            </tr>
          
        </table>

        <input id="Submit" type="submit" value="Submit Food" />


        <div id="appBody" class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>


    }
</body>
</html>
