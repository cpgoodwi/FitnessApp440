@model FoodViewModel

@{
    ViewData["Title"] = "Create a Food";
}

@using (Html.BeginForm("GetFoodEntry", "Entry", FormMethod.Post))
{
    <table cellpadding="0" cellspacing="0">
        <tr>
            <th colspan="2" align="center">Add Your Food</th>
        </tr>
        <tr>
            <td>User: </td>
            <td>
                @Html.TextBoxFor(x => x.ByUser)
            </td>
        </tr>
        <tr>
            <td>Foodname: </td>
            <td>
                @Html.TextBoxFor(x => x.Name)
            </td>
        </tr>
        <tr>
            <td>Food Description: </td>
            <td>
                @Html.TextBoxFor(x => x.DescriptionText)
            </td>
        </tr>
        <tr>
            <td>Calories: </td>
            <td>
                @Html.TextBoxFor(x => x.Calories)
            </td>
        </tr>
        <tr>
            <td>Protein(g): </td>
            <td>
                @Html.TextBoxFor(x => x.Protein)
            </td>
        </tr>
        <tr>
            <td>Carbohydrates (g): </td>
            <td>
                @Html.TextBoxFor(x => x.Carbs)
            </td>
        </tr>
        <tr>
            <td>Fats (g): </td>
            <td>
                @Html.TextBoxFor(x => x.Fat)
            </td>
        </tr>
        <div class="form-outline mb-2">
            <td>test </td>
            @Html.TextBoxFor(x => x.Protein)
        </div>
        <tr>
            <td>File Upload: </td>
            <td>
                <input type="file" id="file" class="form-control form-control-md" />
                <label class="form-label" for="customFile">File Upload</label>
            </td>
        </tr>

    </table>

    <input id="Submit" type="submit" value="Submit Food" />

    @*<input type="button" class="btn btn-info" value="Submit Food" onclick="location.href='@Url.Action("FoodAdd", "Home")'" />*@
}